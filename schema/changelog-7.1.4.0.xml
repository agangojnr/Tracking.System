<?xml version="1.1" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

  <!-- Create tc_simcards table -->
  <changeSet id="1" author="Walter">
    <createTable tableName="tc_devicetypes">
      <column name="id" type="INT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="model" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="manufacturer" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="class" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="attributes" type="VARCHAR(4000)">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="rename-class-to-deviceclass" author="Walter">
    <renameColumn
            tableName="tc_devicetypes"
            oldColumnName="class"
            newColumnName="deviceclass"
            columnDataType="VARCHAR(255)"/>
  </changeSet>


  <changeSet id="add-devicetypeid-to-devices" author="Walter">
    <addColumn tableName="tc_devices">
      <column name="devicetypeid" type="INT">
        <constraints nullable="false" foreignKeyName="fk_device_devicetype"
                     referencedTableName="tc_devicetypes"
                     referencedColumnNames="id"/>
      </column>
    </addColumn>
  </changeSet>

  <changeSet id="create-tc-user-devicetype" author="walter">
    <createTable tableName="tc_user_devicetype">
      <column name="userid" type="INT">
        <constraints nullable="false"/>
      </column>
      <column name="devicetypeid" type="INT">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addForeignKeyConstraint baseTableName="tc_user_devicetype"
                             baseColumnNames="userid"
                             constraintName="fk_user_devicetype_user"
                             referencedTableName="tc_users"
                             referencedColumnNames="id"
                             onDelete="CASCADE"/>

    <addForeignKeyConstraint baseTableName="tc_user_devicetype"
                             baseColumnNames="devicetypeid"
                             constraintName="fk_user_devicetype_simcard"
                             referencedTableName="tc_devicetypes"
                             referencedColumnNames="id"
                             onDelete="CASCADE"/>
  </changeSet>


<!--  <changeSet id="drop-tc-device-asset-table" author="Walter">-->
<!--    <dropTable tableName="tc_device_asset"/>-->
<!--  </changeSet>-->

  <changeSet id="create-tc-device-asset1" author="walter">
    <createTable tableName="tc_device_asset">
      <column name="deviceid" type="INT">
        <constraints nullable="false"/>
      </column>
      <column name="assetid" type="INT">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addForeignKeyConstraint baseTableName="tc_device_asset"
                             baseColumnNames="deviceid"
                             constraintName="fk_asset_device_device"
                             referencedTableName="tc_devices"
                             referencedColumnNames="id"
                             onDelete="CASCADE"/>

    <addForeignKeyConstraint baseTableName="tc_device_asset"
                             baseColumnNames="assetid"
                             constraintName="fk_asset_asset_device"
                             referencedTableName="tc_assets"
                             referencedColumnNames="id"
                             onDelete="CASCADE"/>


  </changeSet>


</databaseChangeLog>

