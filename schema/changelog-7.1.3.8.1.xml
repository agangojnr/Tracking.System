  <!-- ============================ -->
  <!-- 1. NETWORK PROVIDER STRUCTURE -->
  <!-- ============================ -->

  <changeSet id="1" author="Walter">
    <createTable tableName="tc_networkproviders">
      <column name="id" type="INT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="name" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="attributes" type="VARCHAR(4000)">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>


  <!-- =============================== -->
  <!-- 3. USER & NETWORKPROVIDER RELATIONSHIPS -->
  <!-- =============================== -->

  <changeSet id="create-tc-user-networkprovider" author="walter">
    <createTable tableName="tc_user_networkprovider">
      <column name="userid" type="INT">
        <constraints nullable="false"/>
      </column>
      <column name="networkproviderid" type="INT">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addForeignKeyConstraint baseTableName="tc_user_networkprovider"
                             baseColumnNames="userid"
                             constraintName="fk_user_networkprovider_user"
                             referencedTableName="tc_users"
                             referencedColumnNames="id"
                             onDelete="CASCADE"/>

    <addForeignKeyConstraint baseTableName="tc_user_networkprovider"
                             baseColumnNames="networkproviderid"
                             constraintName="fk_user_networkprovider_provider"
                             referencedTableName="tc_networkproviders"
                             referencedColumnNames="id"
                             onDelete="CASCADE"/>
  </changeSet>


