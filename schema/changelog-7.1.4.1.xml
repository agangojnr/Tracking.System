<?xml version="1.1" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

  <!-- Create create-tc-device-asset -->

  <changeSet id="create-tc-device-asset-new" author="walter">
    <createTable tableName="tc_device_asset">
      <column name="deviceid" type="INT">
        <constraints nullable="false"/>
      </column>
      <column name="assetid" type="INT">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addForeignKeyConstraint baseTableName="tc_device_asset"
                             baseColumnNames="deviceid"
                             constraintName="fk_asset_device_device"
                             referencedTableName="tc_devices"
                             referencedColumnNames="id"
                             onDelete="CASCADE"/>

    <addForeignKeyConstraint baseTableName="tc_device_asset"
                             baseColumnNames="assetid"
                             constraintName="fk_asset_asset_device"
                             referencedTableName="tc_assets"
                             referencedColumnNames="id"
                             onDelete="CASCADE"/>
  </changeSet>

  <!-- Add-defaultclientid-column-to-table-tc-users-->

  <changeSet id="add-defaultclientid-fk-to-tc_users" author="walter">
    <addColumn tableName="tc_users">
      <column name="defaultclientid" type="BIGINT"/>
    </addColumn>

    <addForeignKeyConstraint
            baseTableName="tc_users"
            baseColumnNames="defaultclientid"
            referencedTableName="tc_clients"
            referencedColumnNames="id"
            constraintName="fk_users_defaultclientid"/>
  </changeSet>

</databaseChangeLog>

