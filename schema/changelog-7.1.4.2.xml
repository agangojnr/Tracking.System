<?xml version="1.1" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

  <!-- Rename tc_clients.name to clientname -->

  <changeSet id="rename-tc-clients-name-to-clientname" author="walter">

    <renameColumn
            tableName="tc_clients"
            oldColumnName="name"
            newColumnName="clientname"
            columnDataType="VARCHAR(255)"/>

  </changeSet>

  <changeSet id="rename-tc-subresellers-name-to-subresellername" author="walter">

    <renameColumn
            tableName="tc_subresellers"
            oldColumnName="name"
            newColumnName="subresellername"
            columnDataType="VARCHAR(255)"/>

  </changeSet>

  <changeSet id="rename-tc-devices-name-to-subresellername" author="walter">

    <renameColumn
            tableName="tc_devices"
            oldColumnName="model"
            newColumnName="oldmodelname"
            columnDataType="VARCHAR(255)"/>

  </changeSet>

  <changeSet id="rename-tc-resellers-name-to-resellername" author="walter">

    <renameColumn
            tableName="tc_resellers"
            oldColumnName="name"
            newColumnName="resellername"
            columnDataType="VARCHAR(255)"/>

  </changeSet>

</databaseChangeLog>

